package com.visualnuts.exercise1.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.visualnuts.exercise1.utils.Utils;

@Component
public class PrintNumberService {

	@Autowired
	private Utils utils;

	public String getText(Integer finalNumber) {
		if (utils.isDivisibleByBoth(finalNumber)) {
			return "Visual Nuts";
		}
		
		if (utils.isDivisibleBy5(finalNumber)) {
			return "Nuts";
		}
		
		if (utils.isDivisibleBy3(finalNumber)) {
			return "Visual";
		}

		return finalNumber.toString();
	}

}
